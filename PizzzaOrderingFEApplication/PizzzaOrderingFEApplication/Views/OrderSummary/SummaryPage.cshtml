@model List<PizzzaOrderingFEApplication.Models.CustomerPizzaDetails>
@{
    ViewData["Title"] = "SummaryPage";
}
<style>


    .pizza-images {
        border-radius: 8px;
        max-width: 100%;
        height: 13em;
    }

    .fonts {
        font-size: 3em;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        color: darkgoldenrod;
        letter-spacing: 0.1em;
        text-align: center
    }

    .bnts {
        right: 50%;
    }
</style>
<h1 class="font">SummaryPage</h1>



<div class="container">
    <div class="row">
        @for (int i = 0; i < Model.Count; i++)
        {

            <div class="col-4">
                <div class="card m-5" style="width: 20rem; ">
                    <img src="@Model[i].pizzaDetail.PizzaImage" class="card-img-top pizza-images" alt="@Model[i].pizzaDetail.PizzaName">
                    <div class="card-body">
                        <h5 class="card-title">@Model[i].pizzaDetail.PizzaName</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <span class="font-weight-bold">Price: </span>
                                @Model[i].pizzaDetail.PizzaPrice INR |   <span class="font-weight-bold">QTY: </span>@Model[i].qty
                            </li>

                        </ul>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item "><input type="checkbox" checked="@Model[i].onion" disabled="disabled" /><span class="font-weight-bold">  onion</span>  </li>
                            <li class="list-group-item "><input type="checkbox" checked="@Model[i].crispCapsicum" disabled="disabled" /> <span class="font-weight-bold"> crispCapsicum</span></li>
                            <li class="list-group-item "><input type="checkbox" checked="@Model[i].GrilledMushroom" disabled="disabled" /><span class="font-weight-bold"> GrilledMushroom </span></li>
                        </ul>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <span class="font-weight-bold">Pizzas' price: </span>
                                @ViewBag.prices[i] INR
                            </li>


                    </div>

                </div>
            </div>
        }
    </div>
</div>
<div class="fonts"><span class="text-black-50">Your total bill is</span> @ViewBag.prices[Model.Count] INR</div>
<div class="d-flex justify-content-center">
    <div class="btn-group mt-1 bi bi-caret-down-fill">
        <a class="btn btn-primary " asp-area="" asp-controller="OrderSummary" asp-action="ConformOrder">CONFORM ORDER</a>
        <a class="btn btn-primary" asp-area="" asp-controller="PizzaView" asp-action="PizzaDetailsPage">ALTER ORDER</a>
        <a class="btn btn-primary" asp-area="" asp-controller="OrderSummary" asp-action="CancleOrder">CANCLE ORDER</a>

    </div>
</div>

