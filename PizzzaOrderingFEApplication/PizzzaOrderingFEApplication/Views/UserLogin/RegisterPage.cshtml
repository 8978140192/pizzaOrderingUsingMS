

@model PizzzaOrderingFEApplication.Models.UserDetail

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RegisterPage</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <style>
        a {
            color: white;
        }

        nav {
            background-color: dodgerblue;
        }

            nav > a {
                color: black;
            }

                nav > a:hover {
                    color: black;
                    background-color: white;
                }

        h4 {
            text-align: center;
            margin: 1rem;
            color: lawngreen;
            font-size: 2rem;
            font-weight: bolder;
        }

        img {
            z-index: -1;
            width: 100%;
            height: 100vh;
            position: absolute;
        }

        label {
            font-family: 'Times New Roman', Times, serif;
            font-size: 1.5rem;
            width: 8cm;
            display: inline-block;
            text-align: center;
            background-color: white;
            opacity: 0.7;
            color: black;
        }

        input {
            height: 1cm;
            width: 8cm;
            border: 1px solid black;
        }

        .form-group {
            padding: 0.2cm;
        }

        .row {
            margin-left: 7cm;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <button class="btn btn-success"> <a asp-controller="StartUpPage" asp-action="StartPage">Back to HomePage</a></button>
    </nav>
    <img src="/images/bgforlogin.jpg" />
    <h4>Welcome To The Registration Page</h4>


    <div class="container d-flex justify-content-center">
        <div class="row ">
            <div class="col-md-4">
                @using (Html.BeginForm("RegisterPage", "UserLogin", FormMethod.Post))
                {

                    <div class="text-danger bg-light">@ViewBag.Error</div>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserId" class="control-label">Enter your E-mail </label>
                        @Html.TextBoxFor(m => m.UserId, new { @type = "email", required = "required" })
                        <span asp-validation-for="UserId" class="text-danger bg-light"></span>
                    </div>
                    <div class="form-group">
                <label asp-for="Password" class="control-label">Enter your Password </label>
                @Html.PasswordFor(m => m.Password, new { @type = "password", required = "required" })
                <span asp-validation-for="Password" class="text-danger bg-light"></span>
            </div>
                    @*<div class="form-group itemInput text-center">
                        <label asp-for="Password" class="control-label w-100"></label>
                        <input asp-for="Password" type="password" class="form-control w-100" />
                        <span asp-validation-for="Password" class="text-danger bg-light"></span>


                    </div>*@
                    @*<div class="form-group itemInput text-center">
                        <label asp-for="ReTyptePassword" class="control-label w-100"></label>
                        <input asp-for="ReTyptePassword" type="password" class="form-control w-100" />
                        <span asp-validation-for="ReTyptePassword" class="text-danger bg-light"></span>


                    </div>*@
                    <div class="form-group">
                <label asp-for="ReTyptePassword" class="control-label">Conform Password  </label>
                @Html.PasswordFor(m => m.ReTyptePassword, new { @type = "password", required = "required" })
                <span asp-validation-for="ReTyptePassword" class="text-danger bg-light"></span>
            </div>
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label">Enter your Name  </label>
                        @Html.TextBoxFor(m => m.UserName, new { required = "required" })
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserPhone" class="control-label">Enter your Phone </label>
                        @Html.TextBoxFor(m => m.UserPhone, new { required = "required" })
                        <span asp-validation-for="UserPhone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserAge" class="control-label">Enter your Age </label>
                        @Html.TextBoxFor(m => m.UserAge, new { required = "required" })
                        <span asp-validation-for="UserAge" class="text-danger bg-light"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserAddress" class="control-label">Enter your Address </label>
                        @Html.TextBoxFor(m => m.UserAddress, new { required = "required" })
                        <span asp-validation-for="UserAddress" class="text-danger bg-light"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create Account" class="btn btn-success" />
                    </div>

                }

            </div>
        </div>
    </div>

    <br />   <br />  <br />
    <footer>
        <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.05);">
            © 2021 Copyright:
            <a class="text-reset fw-bold" href="#">Pizza Home</a>
        </div>
    </footer>


</body>
</html>
