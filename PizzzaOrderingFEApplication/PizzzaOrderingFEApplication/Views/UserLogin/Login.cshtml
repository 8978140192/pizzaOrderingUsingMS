@model PizzzaOrderingFEApplication.Models.UserLoginDTO

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LoginPage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />


    <style>
        a {
            text-decoration: none;
            color: white;
        }

        nav {
            background-color: dodgerblue;
            padding: 0.6cm;
            margin-top: 0%;
        }

            nav > a {
                color: black;
                padding: 0.5cm;
            }

                nav > a:hover {
                    color: black;
                    background-color: white;
                }


        img {
            z-index: -1;
            width: 100%;
            height: 100vh;
            position: absolute;
        }

        label {
            font-family: 'Times New Roman', Times, serif;
            font-size: 1.5rem;
            width: 12.85cm;
            display: inline-block;
            text-align: center;
            background-color: white;
            opacity: 0.7;
            color: black;
            border: 1px solid white;
            border-radius: 2px;
        }

        .itemInput {
            width: 30em;
        }

        .row {
            margin-top: 10%;
        }

        h2 {
            background-color: none;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <button class="btn btn-success"> <a asp-controller="StartUpPage" asp-action="StartPage">Back to HomePage</a></button>
    </nav>

    <img src="/images/bgforlogin.jpg" />

    <h1 class="text-center text-light">Login</h1>
    

    <div class="row">
        <div class="col-md-4 container d-flex justify-content-center">
            <form asp-action="Login ">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group itemInput ">
                    <label asp-for="UserId" class="control-label w-100">
                    </label>
                    <input asp-for="UserId" class="form-control w-100" />
                    <span asp-validation-for="UserId" class="text-danger bg-light"></span>
                </div>
                <br /><br />
                      <div class="form-group itemInput text-center">
                          <label asp-for="Password" class="control-label w-100"></label>
                          <input asp-for="Password" type="password" class="form-control w-100" />
                          <span asp-validation-for="Password" class="text-danger bg-light"></span>
                          @ViewBag.Error
                      <h1>@ViewBag.authorize</h1>
                          
                      </div>


                <div class="form-group text-center">
                    <input type="submit" value="LOGIN" asp-action="Login" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>




    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
